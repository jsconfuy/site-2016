root = true

[*]

# change these settings to your own preference
indent_style = space
indent_size = 2

# you should keep these unchanged :)
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.jade]
trim_trailing_whitespace = false
